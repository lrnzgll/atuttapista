<div class='banner-form' data-controller="home-search">
  <h1 class='ta-c'>A tutta pista</h1>
  <div class='banner-form-container'>
    <%= form_with url: search_page_path, method: :get, local: true, data: { action: "submit->home-search#search"} do |form| %>
      <div class='search-tip hidden ta-c'>Cerca una itinerario</div>
      <%= form.text_field :search, data: { target: "home-search.body" }, placeholder: "Trova il tuo prossimo itinerario",  class: 'banner-input' %>
        <%= form.submit 'Cerca', class:"btn btn--stripe banner-submit", data: { disable_with: false } %>
    <% end %>
  </div>
</div>

