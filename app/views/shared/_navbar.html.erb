<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path do  %>
    <%= image_pack_tag 'media/stylesheets/images/logo/logo.png', size: '40x40', alt: 'A tutta pista' %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to "Dashboard", dashboard_path(current_user), class: "navbar-wagon-item btn btn-sm btn--stripe" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
        <%= gravatar_image_tag('jean_paul', :gravatar => { default: :wavatar }, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown") %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
              <% end %>
            </li>
            <li>
              <%= link_to(destroy_user_session_path, method: :delete) do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item btn btn-sm btn--stripe" %>
      <%= link_to t(".sign_up", default: "Iscriviti"), new_user_registration_path, class: "navbar-wagon-item btn btn-sm btn--stripe" %>
    <% end %>
  </div>
</div>
