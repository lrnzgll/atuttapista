<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path do  %>
    <%= image_tag 'logo/logo.png', size: '40x40', alt: 'A tutta pista' %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to "Dashboard", dashboard_path(current_user), class: "navbar-wagon-item btn btn-sm btn--stripe" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "navbar-wagon-item btn btn-sm btn--stripe" )%>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item btn btn-sm btn--stripe" %>
      <%= link_to t(".sign_up", default: "Iscriviti"), new_user_registration_path, class: "navbar-wagon-item btn btn-sm btn--stripe" %>
    <% end %>
  </div>
</div>
