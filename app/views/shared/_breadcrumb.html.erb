<% unless breadcrumb_trail.count == 1 %>
  <nav aria-label="breadcrumb">
    <ol class='breadcrumb'>
      <% breadcrumb_trail do |crumb| %>
        <li class="breadcrumb-item">
          <%= link_to crumb.name, crumb.url, (crumb.current? ? {'aria-current' => 'page'} : {}) %>
        </li>
      <% end %>
    </ol>
  </nav>
<% end %>